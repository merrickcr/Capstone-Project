<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="primary_button">
        <item name="android:background">@drawable/button_drawable</item>
        <item name="android:textColor">@drawable/text_selector</item>

        <!--<item name="android:background">@color/colorPrimary</item>-->
    </style>

    <style name="day_button" parent="primary_button">
        <item name="android:textColor">@drawable/toggle_text_selector</item>
        <item name="android:background">@drawable/toggle_button_drawable</item>
        <item name="android:layout_margin">.5dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="basic_text_style">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="divider">
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="divider.horizontal">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:height">0.5dp</item>
    </style>

</resources>
